@model IEnumerable<doanasp.Models.Invoice>

@{
    ViewData["Title"] = "Index"; Layout = "_LayoutAdminIndex";
    string username = "anonymous";
    if (ViewBag.UserName != null)
    {
        username = ViewBag.UserName;
        @section Member{<li><a asp-controller="Accounts" asp-action="Logout">Logout</a></li>}

    }
    else
    {
        @section Member{}

    }
}
@section name{@username}
<div class="col-sm-1"></div>
<div class="col-sm-10">
    <h1>Invoce</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div class="col-md-6">
        <div class="header-search">
            <form method="get">
                <input class="input" name="value" placeholder="Search here">
                <button asp-controller="Invoices" asp-action="FindDMY" class="search-btn">Search</button>
            </form>
        </div>
        <form method="get">
            <button asp-controller="Invoices" asp-action="SearchAdvanced" class="search-btn">SearchHigt</button>
        </form>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IssueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippingAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippingPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IssueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Account.Username)
                    </td>
                    @if (item.Status == false)
                    {
                        <td>
                            <a asp-action="Accept" asp-route-id="@item.id" class="btn btn-primary">Accept</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    }
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-sm-8"></div>
    <div class="col-sm-4"><div class="col-sm-4"></div><div class="col-sm-8"><a asp-action="StatusFalse" class="btn btn-primary">Not Accept</a></div></div>
</div>


@model doanasp.Models.Invoice

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdminIndex";
    string username = "anonymous";
    if (ViewBag.UserName != null)
    {
        username = ViewBag.UserName;
        @section Member{<li><a asp-controller="Accounts" asp-action="Logout">Logout</a></li>}

    }
    else
    {
        @section Member{}

    }
    Account account = ViewBag.account as Account; 
}

@section name{@username }

<h4  style="width:50% ;  margin-left:10%;" >Thanh Toán</h4>
<hr />
<div class="row"  style="width:50% ;  margin-left:10%;">
    <div class="col-md-4">
        <form asp-action="Pay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Khách Hàng </label> <br />
                @account.Fullname
            </div>
            <div class="form-group">
                <label class="control-label">Ngày Lập </label><br />
                @{ var a = DateTime.Now;} @a
            </div>
            <div class="form-group">
                <label class="control-label">Shipping Address</label>
                <input asp-for="ShippingAddress" class="form-control" value="@account.Address"/>
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <labelclass ="control-label">ShippingPhone</label>
                    <input asp-for="ShippingPhone" class="form-control" value="@account.Phone" />
                    <span asp-validation-for="ShippingPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Total</label><br />
                @ViewBag.total
            </div>
            <div class="form-group">
                <label class="control-label">Hình Thức Thanh Toán</label><br />
                    Thanh Toán Khi Nhận Hàng
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>